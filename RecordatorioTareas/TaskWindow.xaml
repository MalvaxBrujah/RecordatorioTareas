<Window x:Class="RecordatorioTareas.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar tarea" Height="350" Width="420"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CONTENIDO PRINCIPAL -->
        <StackPanel Margin="0 0 0 10">

            <TextBlock Text="Título:"/>
            <TextBox x:Name="TxtTitulo" Margin="0 0 0 10"/>

            <TextBlock Text="Descripción:"/>
            <TextBox x:Name="TxtDescripcion"
                     Margin="0 0 0 10"
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <StackPanel Width="180">
                    <TextBlock Text="Fecha de vencimiento:"/>
                    <DatePicker x:Name="PickerFecha"/>
                </StackPanel>

                <StackPanel Margin="10 0 0 0">
                    <TextBlock Text="Hora recordatorio (HH:MM):"/>
                    <TextBox x:Name="TxtHora" Width="80"/>
                </StackPanel>
            </StackPanel>

            <!-- 🔽 ESTA ES LA PARTE NUEVA: CATEGORÍA -->
            <TextBlock Text="Categoría:"/>
            <ComboBox x:Name="CmbCategoria"
                      Margin="0 0 0 10"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"/>

            <CheckBox x:Name="ChkCompletada"
                      Content="Tarea completada"/>
        </StackPanel>

        <!-- BOTONES ABAJO -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Aceptar" Width="80" Margin="0 0 10 0"
                    Click="BtnAceptar_Click"/>
            <Button Content="Cancelar" Width="80"
                    Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
