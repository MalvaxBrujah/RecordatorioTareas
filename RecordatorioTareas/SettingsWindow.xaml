<Window x:Class="RecordatorioTareas.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración"
        Height="220" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0 0 0 10">
            <TextBlock Text="Hora por defecto para nuevas tareas (HH:MM):"/>
            <TextBox x:Name="TxtHoraDefecto" Width="80" Margin="0 0 0 10"/>

            <CheckBox x:Name="ChkInicioWindows" Content="Iniciar con Windows"
                      Margin="0 0 0 5"/>

            <CheckBox x:Name="ChkResumenDiario" Content="Mostrar resumen diario al iniciar"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Aceptar" Width="80" Margin="0 0 10 0"
                    Click="BtnAceptar_Click"/>
            <Button Content="Cancelar" Width="80"
                    Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
